extends workspace
append style
  +stylesheet('/style/setting.css')
append content
  .row
    .col-md-offset-1.col-md-3
      .list-group
        a.list-group-item(href='#account')
          span.glyphicon.glyphicon-star
          | &nbsp; 账户信息
        a.list-group-item(href='#profile')
          span.glyphicon.glyphicon-user
          | &nbsp; 个人资料
        a.list-group-item(href='#message')
          span.glyphicon.glyphicon-bell
          | &nbsp; 消息与提醒
        a.list-group-item(href='#privacy')
          span.glyphicon.glyphicon-lock
          | &nbsp; 隐私保护
        a.list-group-item(href='#signout')
          span.glyphicon.glyphicon-log-out
          | &nbsp; 退出登录
    .col-md-7
      .panel.panel-default
        .panel-heading 用户信息
        .panel-body
          form.form-horizontal
            .form-group
              label.col-md-3.control-label 用户名
              .col-md-5
                input.form-control(type='text', name='')
            .form-group
              label.col-md-3.control-label 邮箱地址
              .col-md-5
                input.form-control(type='email', name='')
            .form-group
              .col-md-offset-3.col-md-9
                button.btn.btn-default(type='submit') 保存
      .panel.panel-default
        .panel-heading 密码变更
        .panel-body
          form.form-horizontal
            .form-group
              label.col-md-3.control-label 原密码
              .col-md-5
                input.form-control(type='password', name='')
            .form-group
              label.col-md-3.control-label 新密码
              .col-md-5
                input.form-control(type='password', name='')
            .form-group
              label.col-md-3.control-label 重复新密码
              .col-md-5
                input.form-control(type='password', name='')
            .form-group
              .col-md-offset-3.col-md-9
                button.btn.btn-default(type='submit') 保存

