
html, body
  font-family Tahoma, Helvetica, Arial, DejaVu Sans, sans-serif
  background #EEE
  height 100%

.form-horizontal label.control-label
  font-weight normal
  padding-top 9px
  padding-bottom 9px

// Selection Area Style {{{

::selection
  background #FF5E99
  color #FFF
  text-shadow none

// }}}

// No border {{{

a:focus, :focus
  outline none !important

::-moz-focus-inner
  border 0 !important

input
  outline-style none !important

// }}}

// wrapper > (content, footer) page framework {{{

.wrapper
  position relative
  display table
  height 100%
  width 100%

.header-container, .footer-container
  display table-row
  height 1px

.footer
  background #333

.content-container
  display table-row

.footer-text
  display inline-block
  color #777
  padding 15px

// }}}

// navbar {{{
.navbar~.container
  margin-top 70px
  margin-bottom 20px
.navbar img.navbar-brand
  padding 0px
  margin-right 15px
// }}}

.v-center-ib-container

  // inline-block space workaround {{{

  word-spacing -4px
  line-height 0px

  &>*
    word-spacing normal
    line-height normal

  // }}} inline-block whitespace

  &.h-center
    text-align center

  &:before
    display inline-block
    content ""
    height  100%
    vertical-align middle

  &>.v-center
    display inline-block
    vertical-align middle

.box

  &.box-ribbon
    width 100%
    background white
    padding 30px 15px

.inline-block
  display inline-block

.fill-parent
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 0px

.view-img
  max-width 100%

