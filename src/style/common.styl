
html, body
  font-family Tahoma, Helvetica, Arial, DejaVu Sans, sans-serif
  background #EEE
  height 100%

body, .container
  overflow-x hidden

// Selection Area Style {{{

::selection
  background #FF5E99
  color #FFF
  text-shadow none

// }}}

// No border {{{

a:focus, :focus
  outline none !important

::-moz-focus-inner
  border 0 !important

input
  outline-style none !important

// }}}

// wrapper > (content, footer) page framework {{{

.wrapper
  position relative
  display table
  height 100%
  width 100%

.header-container, .footer-container
  display table-row
  height 1px

.footer
  background #333

.content-container
  display table-row

.footer-text
  display inline-block
  color #777
  padding 15px

// }}}

// navbar {{{
.navbar~.container
  margin-top 70px
.navbar img.navbar-brand
  padding 0px
  margin-right 15px
// }}}

.v-center-ib-container

  // inline-block space workaround {{{

  letter-spacing -4px
  word-spacing -4px
  line-height 0px

  &>*
    line-height normal
    letter-spacing normal
    word-spacing normal

  // }}} inline-block whitespace

  &.h-center
    text-align center

  &:before
    display inline-block
    content ""
    height  100%
    vertical-align middle

  &>.v-center
    display inline-block
    vertical-align middle

.box

  &.ribbon
    width 100%
    background white
    padding 30px 15px

