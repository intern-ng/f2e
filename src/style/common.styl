
html, body
  font-family Tahoma, Helvetica, Arial, DejaVu Sans, sans-serif
  background #EEE
  height 100%

// Selection Area Style {{{

::selection
  background #FF5E99
  color #FFF
  text-shadow none

// }}}

// No border {{{

a:focus, :focus
  outline none !important

::-moz-focus-inner
  border 0 !important

input
  outline-style none !important

// }}}

// wrapper > (content, footer) page framework {{{

.wrapper
  position relative
  display table
  height 100%
  width 100%

.header-container, .footer-container
  display table-row
  height 1px

.footer
  background #333

.content-container
  display table-row

.footer-text
  display inline-block
  color #777
  padding 15px

// }}}

// navbar {{{
.navbar~.container
  margin-top (70px - 15px) // 15px for .v-center-ib-container::before
.navbar img.navbar-brand
  padding 0px
  margin-right 15px
// }}}

.v-center-ib-container

  &:before
    display inline-block
    content ""
    height  100%
    // margin-right -0.25em
    vertical-align middle

  &>.v-center
    display inline-block
    vertical-align middle

.box

  &.ribbon
    width 100%
    background white
    padding 30px 15px

