extends framework
append head
  title 账户管理 - 贰叁叁课程管理
append style
  +stylesheet('/style/account.css')
append script
  script#account-item(type='text/template')
    .account-item.col-xs-12.col-lg-6
      .box.box-item.view-account-entry.activated
        img.view-photo-img(src='/img/default_photo.jpg')
        h4
          span.view-nickname-text 王小二
          span.view-username
            | (
            span.view-username-text koobur
            | )
        .view-email
          i.glyphicon.glyphicon-envelope
          span.view-email-text foo@bar.com
  +javascript('/script/account.js')
append container
  .row
    .col-md-offset-2.col-md-8.col-lg-offset-1.col-lg-10
      .row.margin-bottom
        .col-xs-3
          a.btn.btn-primary#create-account(href='#')
            span.glyphicon.glyphicon-plus
            | &nbsp; 创建用户
        .col-xs-9.text-right
          .btn-group
            a.btn.btn-default(href='#')
              span.glyphicon.glyphicon-import
              | &nbsp; 导入
            a.btn.btn-default(href='#')
              span.glyphicon.glyphicon-export
              | &nbsp; 导出
      .row.margin-bottom.account-list
      .row.margin-bottom.account-editor.hidden
        .col-md-12
          .box.box-item.view-edit-account
            form.form-horizontal
              .form-group
                label.col-md-3.control-label 用户名
                .col-md-5
                  input.form-control(type='text', name='username')
              .form-group
                label.col-md-3.control-label 电子邮箱
                .col-md-5
                  input.form-control(type='email', name='email')
              .form-group
                label.col-md-3.control-label 密码
                .col-md-5
                  input.form-control(type='text', name='password', placeholder='输入新密码')
              .form-group
                label.col-md-3.control-label 权限
                .col-md-9
                  .btn-group#dropdown-role
                    button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                      span.selected 学员
                      | &nbsp;
                      span.caret
                    ul.dropdown-menu
                      li: a(href='#') 导师
                      li: a(href='#') 学员
              .form-group.delete-account
                label.col-md-3.control-label 操作
                .col-md-9
                  button.btn.btn-default(type='button') 删除帐号
              hr
              .form-group
                label.col-md-3.control-label 姓名
                .col-md-2
                  input.form-control(type='text', name='nickname')
              .form-group
                .col-md-offset-3.col-md-9
                  button.btn.btn-primary(type='submit') 保存
                  button.btn.btn-default#cancel(type='button') 取消

