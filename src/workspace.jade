extends framework
append head
  title 贰叁叁课程管理
append favicon
append style
  +stylesheet('/style/navbar-ctl.css')
append script
  +javascript('/script/navigation.js')
append content-container
  .navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        img.navbar-brand(src='/img/logo/50.png')
      .navbar-collapse.collapse.navbar-control.offline
        ul.nav.navbar-nav
          li: a(href='/home.html')
            span.glyphicon.glyphicon-home
            | &nbsp; 主页
          li.student.can-access: a(href='#')
            span.glyphicon.glyphicon-book
            | &nbsp; 我的课程
          li.student.can-access: a(href='#')
            span.glyphicon.glyphicon-leaf
            | &nbsp; 新课程
          li.admin.teacher.can-access: a(href='#')
            span.glyphicon.glyphicon-tree-deciduous
            | &nbsp; 课程管理
          li.admin.teacher.can-access: a(href='#')
            span.glyphicon.glyphicon-th-list
            | &nbsp; 表单管理
          li.admin.can-access.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span.glyphicon.glyphicon-magnet
              | &nbsp; 系统维护
              | &nbsp;
              b.caret
            ul.dropdown-menu
              li: a(href='#') 用户账户
              li: a(href='#') 备份/恢复
              li: a(href='#') FAQ编辑
        ul.nav.navbar-nav.navbar-right
          li.online.can-access.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span.glyphicon.glyphicon-user
              | &nbsp;
              .inline-block.data-holder.data-profile-name NAME
              | &nbsp;
              b.caret
            ul.dropdown-menu
              li: a(href='/setting.html#profile') 个人资料
              li.divider
              li: a(href='#') 常见问题
              li: a(href='#') 意见反馈
              li.divider
              li: a(href='/setting.html#account') 设置
              li: a(href='#') 登出
          li.offline.can-access: a(href='#')
            span.glyphicon.glyphicon-user
            | &nbsp; 登录
  .container.content
    block content
